{
  "name": "monorepo-rn",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "chatApp:run-android": "yarn workspace chatApp run android",
    "chatApp:run-ios": "yarn workspace chatApp run ios",
    "chatApp:test": "yarn workspace chatApp test",
    "chatApp:start": "yarn workspace chatApp start --reset-cache",
    "chatApp:install-dependencies": "yarn workspace chatApp install",
    "chatApp:install-pods": "yarn workspace chatApp install-pods",
    "socialMediaApp:run-android": "yarn workspace socialMediaApp run android",
    "socialMediaApp:run-ios": "yarn workspace socialMediaApp run ios",
    "socialMediaApp:test": "yarn workspace socialMediaApp test",
    "socialMediaApp:start": "yarn workspace socialMediaApp start --reset-cache",
    "socialMediaApp:install-dependencies": "yarn workspace socialMediaApp install",
    "socialMediaApp:install-pods": "yarn workspace socialMediaApp install-pods",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:cache": "yarn clean && rm -rf .yarn/cache",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.2.5",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-reanimated": "^3.17.5",
    "react-test-renderer": "19.0.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}